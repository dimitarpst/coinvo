generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id        String   @id @default(uuid())
  amount    Decimal
  currency  String
  category  String
  date      DateTime @map("date")      
  note      String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("expense")                        
}
